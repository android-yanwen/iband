<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/ToolBarButton">
    <TextView
        android:id="@+id/menu_title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:textColor="#8affffff"
        android:textSize="@dimen/normal_size"
        android:text="sssss"/>

    <TextView
        android:id="@+id/menu_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="90dp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/shape_alert"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/menu_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/edit_item_margin_right"
        android:src="@mipmap/all_next_icon"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/menu_et"
        android:layout_width="@dimen/menu_edit_width"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/edit_item_margin_right"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="16sp"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/menu_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:background="@null"
        android:textSize="12sp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/menu_unit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_size"
        android:layout_alignBaseline="@+id/menu_title"
        android:layout_alignBottom="@+id/menu_title"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="#26ffffff"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
