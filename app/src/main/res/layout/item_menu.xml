<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/rl_menu_view"
                style="@style/ToolBarButton">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#26000000"/>

    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/set_interface"/>

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_menu_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:textColor="#de000000"
        android:textSize="16sp"
        android:text="界面选择"/>


    <ImageView
        android:id="@+id/iv_menu_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:src="@mipmap/ic_chevron_right"/>

    <TextView
        android:id="@+id/tv_menu_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_menu_check"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:textColor="#8e000000"
        android:text="未开启"
        android:visibility="gone"/>

</RelativeLayout>