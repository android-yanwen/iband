<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/tab_activity"/>

    <RelativeLayout
        android:id="@+id/rl_bind_state"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ScrollView
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:layout_height="110dp">
            <EditText
                android:id="@+id/et_question"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入遇到的问题或建议"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:background="@null"
                android:visibility="visible"/>
        </ScrollView>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/id_ll_pic"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_question_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:src="@mipmap/feedback_addimg"/>

            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#26000000"/>

    <RelativeLayout
        android:id="@+id/rl_help"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.manridy.iband.ui.EditItem
            android:id="@+id/ei_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ei_input_type="String"
            app:ei_title="联系邮箱"
            app:ei_et_hint="填写方便我们联系你"
            app:ei_max_length = "20"
            app:ei_single_line="true"/>
    </RelativeLayout>


    <Button
        android:id="@+id/bt_send"
        android:layout_width="288dp"
        android:layout_height="36dp"
        android:layout_marginTop="88dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_button_alert"
        android:textColor="#c703a9f4"
        android:textSize="12sp"
        android:text="发送"
        android:visibility="visible"/>



</LinearLayout>
