<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_content"
        android:textSize="16sp"
        android:text="开始久坐提醒"/>

    <ImageView
        android:id="@+id/iv_menu_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_on"/>

    <TextView
        android:id="@+id/iv_menu_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_menu_img"
        android:text="30分钟"
        android:textSize="16sp"
        android:textColor="#de2196f3"
        />

    <TextView
        android:id="@+id/tv_menu_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_menu_name"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        android:text="12:00~14:00不进行提醒"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_menu_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#26000000"/>
</RelativeLayout>