<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_background">
    <include layout="@layout/tab_activity"/>

    <com.manridy.iband.ui.items.AlertBigItems
        android:id="@+id/ai_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:big_name="@string/hint_alert_lost_open"
        app:big_hint="@string/hint_alert_lost"
        app:big_onoff="true"/>

    <com.manridy.iband.ui.items.AlertBigItems
        android:id="@+id/ai_nap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:big_name="防丢免打扰"
        app:big_hint="23:00~06:00不进行提醒"
        app:big_onoff="false"
        android:visibility="gone"/>
</LinearLayout>