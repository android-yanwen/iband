<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#656565"
                android:endColor="#656565"
                android:angle="0" />
            <stroke android:width="0dip" android:color="#656565" />
            <corners android:radius="5dip" />
            <padding android:left="10dp" android:top="2dp"
                android:right="10dp" android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#656565"
                android:endColor="#656565"
                android:angle="0" />
            <stroke android:width="0dip" android:color="#656565" />
            <corners android:radius="2dip" />
            <padding android:left="10dp" android:top="5dp"
                android:right="10dp" android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#2196F3"
                android:endColor="#2196F3"
                android:angle="0" />
            <stroke android:width="0dip" android:color="#2196F3" />
            <corners android:radius="5dip" />
            <padding android:left="10dp" android:top="0dp"
                android:right="10dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>